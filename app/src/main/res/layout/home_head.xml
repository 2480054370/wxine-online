<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/HomeHeadBgImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:background="@drawable/topbackground" />

        <com.wxine.android.utils.CircleImageView
            android:id="@+id/HomeHeadIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:fitsSystemWindows="true"
            android:src="@drawable/course_tou" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/HomeHeadName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:text="林听寒"
                android:textColor="#222222"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/HomeHeadAutograph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HomeHeadName"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="优雅的迎接成功,勇敢的面对挫折"
                android:textColor="#373737"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/HomeHeadFollowMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HomeHeadAutograph"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="1 位关注者"
                android:textColor="#969696"
                android:textSize="11dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/HomeHeadButton"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/home_button"
                android:text="修改个人资料"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#EEEEEE"
                android:padding="12dp"
                android:text="个人的信息"
                android:textColor="#BBBBBB"
                android:textSize="20px"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>